                    <li><a href="#update-pricing"><b>Update Price</b></a></li>
                    <li><a href="#cancel-reservation"><b>Cancel Reservation</b></a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div style="height: 100px; width: 100%;"></div>
    <section>
        <!-- Tables can be added here -->
    </section>
    <section class="block" id="add-new-admin">
        <h2>Add New Admin</h2>
        <form action="/admin/add" method="POST">
            <label for="adminName">Admin Name:</label>
            <input type="text" id="adminName" name="adminName" required>
            
            <label for="adminPassword">Admin Password:</label>
            <input type="password" id="adminPassword" name="adminPassword" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9]).{5,}">
            
            <button type="submit">Add Admin</button>
        </form>
    </section>
    <section class="block" id="delete-user">
        <h2>Delete User</h2>
        <form action="/admin/delete/user" method="POST">
            <label for="userId">User ID:</label>
            <input type="number" id="userId" name="userId" required>
            
            <button type="submit">Delete User</button>
        </form>
    </section>
    <section class="block" id="add-new-slot">
        <h2>Add New Slot</h2>
        <form action="/admin/add/slot" method="POST">
            <label for="slotNumber">Slot Number:</label>
            <input type="number" id="slotNumber" name="slotNumber" required>
            
            <label for="vehicleType">Vehicle Type:</label>
            <input type="text" id="vehicleType" name="vehicleType" required>
            
            <label for="pricePerHour">Price per Hour:</label>
            <input type="number" id="pricePerHour" name="pricePerHour" required>
            
            <label for="isAvailable">Availability:</label>
            <select id="isAvailable" name="isAvailable">
                <option value="1">Available</option>
                <option value="0">Not Available</option>
            </select>
            
            <label for="slotDetails">Slot Details:</label>
            <textarea id="slotDetails" name="slotDetails"></textarea>
            
            <button type="submit">Add Slot</button>
        </form>
    </section>
    <section class="block" id="delete-slot">
        <h2>Delete Slot</h2>
        <form action="/admin/delete/slot" method="POST">
            <label for="slotId">Slot ID:</label>
            <input type="number" id="slotId" name="slotId" required>
            
            <button type="submit">Delete Slot</button>
        </form>
    </section>
    <section class="block" id="update-pricing">
        <h2>Update Pricing</h2>
        <form action="/admin/update/pricing" method="POST">
            <label for="slotId">Slot ID:</label>
            <input type="number" id="slotId" name="slotId" required>
            
            <label for="newPricePerHour">New Price per Hour:</label>
            <input type="number" id="newPricePerHour" min="0" name="newPricePerHour" required>
            
            <button type="submit">Update Pricing</button>
        </form>
    </section>
    <section class="block" id="cancel-reservation">
        <h2>Cancel Reservation</h2>
        <form action="/admin/cancel/reservation" method="POST">
            <label for="reservationId">Reservation ID:</label>
            <input type="number" id="reservationId" name="reservationId" required>
            
            <button type="submit">Cancel Reservation</button>
        </form>
    </section>

